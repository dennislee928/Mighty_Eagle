# Mighty Eagle API - Environment Configuration

# Server
PORT=8080
GIN_MODE=debug

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mighty_eagle
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT/Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_SECRET_SALT=your-salt-for-api-key-generation

# World ID (optional)
WORLDID_APP_ID=
WORLDID_API_KEY=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Webhooks
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# Rate Limiting
GLOBAL_RATE_LIMIT_PER_MINUTE=1000

# Audit Exports
EXPORT_STORAGE_PATH=./exports
EXPORT_DOWNLOAD_EXPIRY_HOURS=24